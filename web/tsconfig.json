{
    "compilerOptions": {
        "alwaysStrict": true,
        "sourceMap": true,
        "lib": [
          "es2015",
          "dom"
        ],
        "listEmittedFiles": true,
        "listFiles": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "esNext",
        "target": "es6"
    },
    "include": [
        "src/ts/*.ts",
        "*.d.ts"
    ],
    "exclude": [],
    "typedocOptions": {
        "excludeExternals": true,
        "excludeNotExported": false,
        "externalPattern": "**/*node*",
        "exclude": ["**/src/ts/+(*_loader|worker).ts"],
        "ignoreCompilerErrors": true,
        "includeDeclarations": true,
        "mode": "modules",
        "module": "commonjs",
        "name": "plasma-web",
        "out": "doc",
        "readme": "README.me",
        "target": "ES5",
        "theme": "default",
        "sourcefile-url-prefix": "https://github.com/royaltm/rust-plasma/blob/master/web/"
    }
}
